{
  "license": "Copyright (c) Microsoft Corporation. All rights reserved. Licensed under the MIT license.",
  "tool_version": "1.1.0",
  "model_description": "This model is used for slot tagging task. It achieved a f1-score of 94.66 on the dataset below",
  "inputs": {
    "use_cache": true,
    "dataset_type": "sequence_tagging",
    "tagging_scheme": "BIOES",
    "data_paths": {
      "train_data_path": "./dataset/slot_tagging/conll_2003/eng.train.tsv",
      "valid_data_path": "./dataset/slot_tagging/conll_2003/eng.testa.tsv",
      "test_data_path": "./dataset/slot_tagging/conll_2003/eng.testb.tsv",
      "pre_trained_emb": "./dataset/GloVe/glove.840B.300d.txt"
    },
    "involve_all_words_in_pretrained_emb": false,
    "add_start_end_for_seq": false,
    "file_header": {
      "word": 0,
      "tag": 1
    },
    "model_inputs": {
      "words": ["word"]
    },
    "target": ["tag"]
  },
  "outputs":{
    "save_base_dir": "./models/slot_tagging_bilstm_attn/",
    "model_name": "model.nb",
    "train_log_name": "train.log",
    "test_log_name": "test.log",
    "predict_log_name": "predict.log",
    "predict_fields": ["prediction"],
    "predict_output_name": "predict.tsv",
    "cache_dir": ".cache.slot_tagging_bilstm_attn/"
  },
  "training_params": {
    "vocabulary": {
      "min_word_frequency": 1
    },
    "optimizer": {
      "name": "Adam",
      "params": {
        "lr": 0.001
      }
    },
    "lr_decay": 0.95,
    "minimum_lr": 0.00001,
    "epoch_start_lr_decay": 1,
    "use_gpu": true,
    "batch_size": 32,
    "batch_num_to_show_results": 50,
    "max_epoch": 20,
    "valid_times_per_epoch": 2
  },
  "architecture":[
    {
        "layer": "Embedding",
        "conf": {
          "word": {
            "cols": ["word"],
            "dim": 300
          }
        }
    },
    {
      "layer_id": "sentence_dropout",
      "layer": "Dropout",
      "conf": {
          "dropout": 0.2
      },
      "inputs": ["words"]
    },
    {
        "layer_id": "sentence_bilstm",
        "layer": "BiLSTM",
        "conf": {
          "hidden_dim": 256,
          "dropout": 0.2,
          "num_layers": 2
        },
        "inputs": ["sentence_dropout"]
    },
    {
        "layer_id": "sentence_attn",
        "layer": "Attention",
        "conf": {
        },
        "inputs": ["sentence_bilstm","sentence_bilstm"]
    },
    {
        "output_layer_flag": true,
        "layer_id": "output",
        "layer": "Linear",
        "conf": {
          "hidden_dim": [-1],
          "activation": "PReLU",
          "batch_norm": false,
          "last_hidden_activation": false,
          "last_hidden_softmax": false
        },
        "inputs": ["sentence_attn"]
    }
  ],
  "loss": {
      "losses": [
        {
          "type": "CrossEntropyLoss",
          "conf": {
              "size_average": true
          },
          "inputs": ["output","tag"]
        }
      ]
  },
  "metrics": ["seq_tag_f1","seq_tag_accuracy"]
}